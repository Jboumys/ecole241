{% extends 'base.html.twig' %}

{% block title %}Requérants{% endblock %}

{% block body %}


        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">

                            <div class="card-body card-block">
                                <form action="" method="post" class="form-horizontal">
                                    <div class="row form-group">

                                        <div class="col-md-4">
                                            <strong class="card-title">Liste requérants</strong>
                                        </div>
                                        <div class="col-md-2 offset-2">
                                            <a href="#" class="btn btn-default btn-sm" title="imprimer la liste">
                                                <img src="{{ asset('stylesheet/img/imprimante_icon.png') }}" alt="icone imprimante" title="imprimer" width="40">
                                            </a>
                                            <a href="{{ path('requerant_new') }}" title="nouveau requérant" class="btn btn-default btn-sm">
                                                <img src="{{ asset('stylesheet/img/requerant-plus.jpg') }}" alt="icone nouveau user" title="nouveau requérant" width="40">
                                            </a>
                                        </div>

                                        <div class="col col-md-4">
                                            <div class="input-group">
                                                <input type="text" id="input1-group2" name="input1-group2" placeholder="recherche" class="form-control">
                                                <div class="input-group-btn">
                                                    <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>

                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead class="text-center">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Lieu-dit</th>
                                        <th class="text-center" colspan="3">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td colspan="3"></td>
                                    </tr>
                                {% for requerant in requerants %}
                                    <tr>
                                        <td>{{ requerant.nom }}</td>
                                        <td>{{ requerant.prenom }}</td>
                                        <td>{{ requerant.adresse }}</td>
                                        <td><a href="{{ path('requerant_show',{id: requerant.id}) }}" class="btn btn-primary btn-sm" title="détails"><i class="fa fa-eye"></i></a></td>
                                        <td><a href="{{ path('requerant_edit',{id: requerant.id}) }}" class="btn btn-success btn-sm" title="éditer"><i class="fa fa-edit"></i></a></td>
                                        <td><a href="#" class="btn btn-danger btn-sm" title="supprimer"><i class="fa fa-trash"></i></a></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td colspan="3"></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->




{% endblock %}