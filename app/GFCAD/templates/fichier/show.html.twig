{% extends 'base.html.twig' %}

{% block title %}{{ fichier.typeFichier.nom }}{% endblock %}

{% block body %}

   <div class="card">
       <div class="card-body">
           <div class="row">
               <div class="col-12 col-md-12">
                   <br/>
                   {# read and display just one flash message type #}
                   {% for message in app.flashes('success') %}
                       <div class="alert alert-success">
                           {{ message }}✅
                       </div>
                   {% endfor %}
                   {% for message in app.flashes('warming') %}
                       <div class="alert alert-warning">
                           {{ message }}
                       </div>
                   {% endfor %}

                   <div class="padding-20">
                       <h1 class="text-center">Fichier n° {{ fichier.id }}</h1><br/>
                       <div class="col-10 offset-2">
                           <img src="{{ asset('uploads/document/' ~ fichier.imageName) }}" alt="{{ fichier.typeFichier.nom }}">
                       </div>

                       {#<div>#}
                           {#<a href="{{ asset('uploads/document/' ~ fichier.imageName) }}">click here to download the PDF file.</a>#}
                       {#</div>#}

                   </div>
               </div>
           </div>
       </div>
   </div>

{% endblock %}
