{% extends 'base.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="text-center">Ajouter un fichier</h1><br/>

            {# read and display just one flash message type #}
            <div id="message">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center">
                        {{ message }}âœ…
                    </div>
                {% endfor %}
                {% for message in app.flashes('warming') %}
                    <div class="alert alert-warning text-center">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>

            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_start(form) }}
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.typeFichier, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.description, {'attr': {'class': 'form-control'}}, {'attr': {'placeholder': 'section'}}) }}
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Sauvegarder</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </fieldset>
            <br/>
        </div>
    </div>
{% endblock %}