{% extends 'base.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="text-center">Ajouter un requérant</h1><br/>

            {# read and display just one flash message type #}
            <div id="message">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center">
                        {{ message }}✅
                    </div>
                {% endfor %}
                {% for message in app.flashes('warming') %}
                    <div class="alert alert-warning text-center">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>

            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_start(form) }}
                        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}, {'attr': {'placeholder': 'nom du requérant'}} ) }}
                        {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}, {'attr': {'placeholder': 'prénom du requérant'}}) }}
                        {#{{ form_row(form.genre,  {'attr': {'class': 'form-control'}}) }}#}
                        {{ form_row(form.nationalite, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(form.tel, {'attr': {'class': 'form-control'}}, {'attr': {'placeholder': 'téléphone'}}) }}
                        {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}, {'attr': {'placeholder': 'Lieu-dit'}}) }}
                        <br/>
                        <div class="form-group">
                            {{ form_row(form.pieceIdentification, {'attr': {'class': 'form-control'}}) }}
                        </div><br/>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </fieldset>
            <br/>
        </div>
    </div>
{% endblock %}