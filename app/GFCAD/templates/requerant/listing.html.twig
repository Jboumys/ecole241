{% extends 'base.html.twig' %}

{% block title %}Listing dossier du requérant{% endblock %}

{% block body %}

    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">

                        <div class="card-body card-block">
                            <form action="" method="post" class="form-horizontal">
                                <div class="row form-group">

                                    <div class="col-md-8">
                                        <strong class="card-title">Liste des dossiers du requérant</strong>
                                    </div>

                                    <div>
                                        <h1 class="text-center">Détails sur le requérant</h1><br/>

                                        <div class="padding-20">
                                            <div class="col-md-6">
                                                <ul>
                                                    <li><b>Nom : </b> {{ requerant.nom }}</li>
                                                    <li><b>Prénom : </b> {{ requerant.prenom }}</li>
                                                    <li><b>Lieu-dit : </b> {{ requerant.adresse }}</li>

                                                    <li><b>Total dossier : </b> {{ "2" }}</li>
                                                </ul>
                                                <div class="form-group">
                                                    <a class="btn btn-primary btn-sm" href="{{ path('requerant_listing', {id: requerant.id}) }}"> Voir dossier(s) lié(s) au requérant</a>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <img src="{{ asset('uploads/piece_identification/' ~ requerant.pieceIdentification.imageName) }}" alt="">
                                            </div>
                                        </div>

                                        {#<div>#}
                                        {#<a href="{{ asset('uploads/document/' ~ fichier.imageName) }}">click here to download the PDF file.</a>#}
                                        {#</div>#}
                                    </div>

                                </div>
                            </form>
                        </div>

                    </div>

                    <div class="card-body">

                        <div class="col-md-4">
                            <a class="btn btn-default btn-sm">
                                <img src="{{ asset('stylesheet/img/imprimante_icon.png') }}" alt="icone imprimante" title="imprimer" width="40">
                            </a>
                            <a href="{{ path('dossier_new') }}" class="btn btn-default btn-sm" >
                                <img src="{{ asset('stylesheet/img/folder-add.png') }}" alt="icone nouveau dossier" title="nouveau dossier" width="40">
                            </a>
                            <a href="#" class="btn btn-default btn-sm" >
                                <img src="{{ asset('stylesheet/img/folder_export.jpg') }}" alt="icone nouveau dossier" title="exporter dossier" width="40">
                            </a>
                        </div>

                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead class="text-center">
                            <tr>
                                <th>Dossier</th>
                                <th>N° dossier</th>
                                <th>Date création</th>
                                <th>Mise à jour le</th>
                                <th>Statut</th>
                                <th colspan="3">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td colspan="4"></td>
                            </tr>
                            {% for dossier in dossiers %}
                                <tr>
                                    <td>
                                        <a href="{{ path('dossier_show',{id: dossier.id}) }}">
                                            <img src="{{ asset('theme/images/dossier-non-vide.jpg') }}" alt="dossier" width="40">
                                        </a>
                                    </td>
                                    <td>{{ dossier.matricule }}</td>
                                    <td>{{ dossier.dateCreate|date('d-m-Y') }}</td>
                                    <td>{{ dossier.dateMAJ|date('d-m-Y') }}</td>
                                    <td></td>
                                    <td><a class="btn btn-primary btn-sm" href="" title="ouvrir"><i class="fa fa-eye"></i></a></td>
                                    <td><a class="btn btn-success btn-sm" href="" title="éditer"><i class="fa fa-edit"></i></a></td>
                                    <td><a class="btn btn-danger btn-sm" href="" title="supprimer"><i class="fa fa-trash"></i></a></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td colspan="4"></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->



{% endblock %}
