{% extends 'base.html.twig' %}

{% block title %}Dossiers{% endblock %}

{% block body %}

    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">

                        <div class="card-body card-block">
                            <form action="" method="post" class="form-horizontal">
                                <div class="row form-group">

                                    <div class="col-md-4">
                                        <strong class="card-title">Liste des dossiers</strong>
                                    </div>
                                    <div class="col-md-3 offset-1">
                                        <a class="btn btn-default btn-sm">
                                            <img src="{{ asset('stylesheet/img/imprimante_icon.png') }}" alt="icone imprimante" title="imprimer" width="40">
                                        </a>
                                        <a href="{{ path('dossier_new') }}" class="btn btn-default btn-sm" >
                                            <img src="{{ asset('stylesheet/img/folder-add.png') }}" alt="icone nouveau dossier" title="nouveau dossier" width="40">
                                        </a>
                                        <a href="#" class="btn btn-default btn-sm" >
                                            <img src="{{ asset('stylesheet/img/folder_export.jpg') }}" alt="icone nouveau dossier" title="exporter les dossiers" width="40">
                                        </a>
                                    </div>

                                    <div class="col col-md-4">
                                        <div class="input-group">
                                            <input type="text" id="input1-group2" name="input1-group2" placeholder="recherche" class="form-control">
                                            <div class="input-group-btn">
                                                <button class="btn btn-primary"><i class="fa fa-search"></i></button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>

                    </div>

                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead class="text-center">
                            <tr>
                                {#<th>Dossier</th>#}
                                <th>N° dossier</th>
                                <th>Date création</th>
                                <th>Mise à jour le</th>
                                <th>Statut</th>
                                <th>Titulaire</th>
                                <th colspan="4">Action</th>
                            </tr>
                            </thead>
                            <tbody class="text-center">
                            <tr>
                                {#<td></td>#}
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td colspan="6"></td>
                            </tr>
                            {% for dossier in dossiers %}
                                <tr>
                                    {#<td>#}
                                        {#<a href="{{ path('dossier_show',{id: dossier.id}) }}">#}
                                            {#<img src="{{ asset('theme/images/dossier-non-vide.jpg') }}" alt="dossier" width="30">#}
                                        {#</a>#}
                                    {#</td>#}
                                    <td>{{ dossier.matricule }}</td>
                                    <td>{{ dossier.dateCreate|date('d-m-Y') }}</td>
                                    <td>{{ dossier.dateMAJ|date('d-m-Y') }}</td>
                                    <td></td>
                                    <td>{{ dossier.requerant.identite}}</td>
                                    <td><a class="btn btn-default btn-sm" href=""><img src="{{ asset('stylesheet/img/folder_export.jpg') }}" alt="icone exportation" title="exporter le dossier" width="25"></a></td>
                                    <td><a class="btn btn-primary btn-sm" href="{{ path('dossier_show',{id: dossier.id}) }}" title="ouvrir"><i class="fa fa-eye"></i></a></td>
                                    <td><a class="btn btn-success btn-sm" href="" title="éditer"><i class="fa fa-edit"></i></a></td>
                                    <td><a class="btn btn-danger btn-sm" href="" title="supprimer"><i class="fa fa-trash"></i></a></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td colspan="5"></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->



{% endblock %}
